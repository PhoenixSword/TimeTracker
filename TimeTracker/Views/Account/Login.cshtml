            var errorMessage = error.message;
            alert(errorCode + " - " + errorMessage);
        });
    }

    function loginEmail() {
        var email = document.getElementsByTagName("input")[0].value;
        var password = document.getElementsByTagName("input")[1].value;
    
        console.log(email);
        console.log(password);
        firebase.initializeApp(config);
        firebase.auth().signInWithEmailAndPassword(email, password).then(function (result) {
            var token = result.credential.accessToken;
            var user = result.user;
            alert("login OK");
            console.log(user);
            user.getToken().then(function (t) {
                token = t;
                console.log(token);
                //loginAPI(email, password);
            });
        }).catch(function (error) {
            var errorCode = error.code;
            var errorMessage = error.message;
            alert(errorCode + " - " + errorMessage);
        });
    }

    function loginAPI()
    {
        var email = document.getElementsByTagName("input")[0].value;
        var password = document.getElementsByTagName("input")[1].value;
        console.log(password);
        $.ajax({
            url: "http://localhost:62533/Account/SingInTest",
            dataType: 'json',
            type: 'POST',
            data: {email: email, password: password}
        });
    }
    function PostloginAPI(token) {
        console.log(token);
        $.ajax({
            url: "http://localhost:62533/Account/SetToken",
            type: 'POST',
            data: {token: token},
            beforeSend: function (xhr) {
                xhr.setRequestHeader("Accept", "application/json");
                xhr.setRequestHeader("Content-Type", "application/json");
                xhr.setRequestHeader("Authorization", "Bearer " + token);
            },
            error: function (ex) {
                console.log(ex.status + " - " + ex.statusText);
            },
            success: function (data) {
                console.log(data);
                return data;
            }
        });
    }
</script>
